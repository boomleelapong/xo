        private void boom1_Click(object sender, EventArgs e)
        {
            button10.Text = "";
            button11.Text = "";
            button12.Text = "";
            button13.Text = "";
            button14.Text = "";
            button15.Text = "";
            button16.Text = "";
            button17.Text = "";
            button18.Text = "";
            cl = 10;
        }

        private void button10_Click(object sender, EventArgs e)
        {
            if (button10.Text=="")
        {
               if (cl % 2 ==0)
                {
                    button10.ForeColor = Color.Red;
                    button10.Text = "x";
                    cl--;
                    timer1.Start();
                }
               else
                {
                    button11.ForeColor = Color.Blue;
                    button10.Text = "O";
                    cl--;
                    timer1.Start();
                }
        }
}

