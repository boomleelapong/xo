        private void timer1_Tick(object sender, EventArgs e)
        {
            if(cl < 10)
            {
                timer1.Stop();
                if (button10.Text == "x" && button11.Text == "x" && button12.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button13.Text == "x" && button14.Text == "x" && button15.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button16.Text == "x" && button17.Text == "x" && button18.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button10.Text == "x" && button11.Text =="x" && button12.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button10.Text == "x" && button13.Text == "x" && button16.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button11.Text == "x" && button14.Text == "x" && button17.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
                else if (button12.Text == "x" && button15.Text == "x" && button18.Text == "x")
                {
                    MessageBox.Show("x เป็นผู้ชนะ", "แจ้งเตือน");
                }
            }
            else if (button13.Text == "x" && button14.Text == "x" && button15.Text == "x")
            {
                MessageBox.Show("O เป็นผู้ชนะ", "แจ้งเตือน");
            }
            else if (button16.Text == "x" && button17.Text == "x" && button18.Text == "x")
            {
                MessageBox.Show("O เป็นผู้ชนะ", "แจ้งเตือน");
            }
            else if (button10.Text == "x" && button11.Text == "x" && button12.Text == "x")
            {
                MessageBox.Show("O เป็นผู้ชนะ", "แจ้งเตือน");
            }
            else if (button10.Text == "x" && button13.Text == "x" && button16.Text == "x")
            {
                MessageBox.Show("O เป็นผู้ชนะ", "แจ้งเตือน");
